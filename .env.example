# ===== API KEYS =====
# Hugging Face Token (get from https://huggingface.co/settings/tokens)
# Needs 'write' access for uploading data
HF_TOKEN=hf_YOUR_HUGGINGFACE_TOKEN

# Hugging Face Repository (format: username/dataset-name)
HF_REPO_ID=your-username/your-dataset-name

# Goodfire AI API Key (get from https://goodfire.ai)
# Required only if using LLAMA_3_1_8B model
GOODFIRE_API_KEY=gf_YOUR_GOODFIRE_API_KEY

# Gemini API Key (get from https://ai.google.dev/)
# Required for judge (evaluation) and optional for steward
GEMINI_API_KEY=your_gemini_api_key_here

# ===== REPRODUCIBILITY SETTINGS =====
# Temperature for model sampling (0.0 = deterministic, 1.0 = creative)
MODEL_TEMPERATURE=0.7

# Top-p (nucleus sampling) parameter
MODEL_TOP_P=0.95

# Random seed for reproducibility
MODEL_SEED=42

# Maximum tokens in model response
MODEL_MAX_TOKENS=500

# ===== BATCH EXECUTION =====
# Enable batch mode (true/false) - runs without user input prompts
BATCH_MODE=false

# Number of runs per prompt variant in batch mode
BATCH_SIZE=5

# Delay in seconds between runs to avoid rate limiting
INTER_RUN_DELAY=2.0

# ===== LOCAL BACKUP =====
# Enable local backups before uploading to HuggingFace (true/false)
LOCAL_BACKUP_ENABLED=true

# Directory for local backups
LOCAL_BACKUP_DIR=local_backups
